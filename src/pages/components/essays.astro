---
import type { MarkdownInstance } from 'astro';

const { essays, series } = Astro.props;
let _essays = essays as MarkdownInstance<Record<string, any>>[]
---
<div class='mb-4'>
    <h3 class='font-bold'>{series}</h3>
    {(_essays || []).map(essay => (
        <div class='flex justify-between mb-2'>
            <a href={essay.url} class='text-gray-700 dark:text-[#d4d4d4]'>
                {essay.frontmatter.title}
            </a>
            <span>{essay.frontmatter.pubDate}</span>
        </div>
    ))}
</div>